<html>
<head>

  <!-- Date picker -->
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


</head>

<body>

  <center style="margin-bottom: 2%;">
    <b>--------------------------------------------------------------------------------------------------------------------------------------------</b>
    <br><br><br>HEADER<br><br><br>
    <b>--------------------------------------------------------------------------------------------------------------------------------------------</b>
  </center>

  <div style="width: 60%; margin-top: 2%;">
    <p>Métier :</p>
    <div id="job" contenteditable="true" style="height: 5%; border-style: solid; border-width: 1px; border-color: #c9c9c9;">
      {{ job.name }}
    </div>
  </div>

  <div style="width: 60%; margin-top: 2%;">
    <p>Secteur d'activité :</p>
    <select id="domain" style="width:200px; height:40px;">
      {% for domain in domains %}
      <option value="{{ domain.name }}">{{ domain.name }}</option>
      {% endfor %}
    </select>
  </div>
  <script>
  document.getElementById("domain").value = "{{ job.domain }}";
  </script>

  <div>
    <button onclick="save()" style="margin-top: 2%;">Ajouter</button>
    <script type="text/javascript">
    function save()
    {
      var job = document.getElementById('job').innerText;
      var domain = document.getElementById('domain').value;

      $.ajax({
        url: '{{ (path('save_job')) }}',
        type: "POST",
        dataType: "text",
        data: {
          "job": job,
          "domain": domain,
          "id": "{{ job.id }}"
        }
      });
      window.location.href = "{{ path('job') }}";
    }
    </script>
  </div>

</body>
</html>
