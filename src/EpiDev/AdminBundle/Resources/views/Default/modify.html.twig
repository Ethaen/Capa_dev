<html>
<head>

  <!-- Date picker -->
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
  $( function() {
    $("#datepicker").datepicker({ dateFormat: "dd-mm-yy" }).val();
    $("#datepicker").datepicker("setDate" , "{{ entity.Date|date('d-m-Y') }}");
  });
  </script>

</head>

<body>

  <center style="margin-bottom: 2%;">
    <b>--------------------------------------------------------------------------------------------------------------------------------------------</b>
    <br><br><br>HEADER<br><br><br>
    <b>--------------------------------------------------------------------------------------------------------------------------------------------</b>
  </center>

  <div style="width: 60%; position: absolute; margin-top: 2%;">
    <p>Titre :</p>
    <div id="title" contenteditable="true" style="height: 5%; border-style: solid; border-width: 1px; border-color: #c9c9c9;">
      {{ entity.Title }}
    </div>
  </div>

  <div align="right">
    <img src="img/actuality/{{ entity.Img }}" height="15%"/>
  </div>

  <div>
    <p>Contenu :</p>
    <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script> <script type="text/javascript">
    bkLib.onDomLoaded(function() { nicEditors.allTextAreas({buttonList : ['fontSize','bold','italic','underline']}) });
    </script>
    <form id="content_area">
      <textarea style="width: 100%; height: 30%;">{{ entity.Texte }}</textarea>
    </form>
  </div>

  <div>
    <p>Date :</p>
    <input type="text" id="datepicker"></input>
  </div>
  <div>
    <button onclick="save()" style="margin-top: 2%;">Save</button>
    <script type="text/javascript">
    function save() {
      bkLib.onDomLoaded(nicEditors.allTextAreas);
      var title = document.getElementById('title').innerText;
      var content = $('#content_area').find('.nicEdit-main').html();
      var date = document.getElementById('datepicker').value;
      var id = "{{ entity.id }}";
      var path = "{{ path('saveActuality') }}"+"?title="+title+"&content="+content+"&date="+date+"&id="+id;

      window.location.replace(path);
    }
    </script>
  </div>

</body>
</html>
