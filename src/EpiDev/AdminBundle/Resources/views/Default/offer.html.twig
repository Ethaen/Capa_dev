<body>

	<!-- HEADER -->

	<div id="wrapper-header">
		<div id="main-header" class="object">
	    <div class="top-rated object" style="color:red">Offres d'emplois</div>
	        <div id="stripes"></div>
	    </div>
	</div>

<!-- HEADER -->

<!-- BUTTON -->
<!--
