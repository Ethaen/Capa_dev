<br>-->
<!-- BUTTON -->

<!-- Filter -->
<br><br><br><br><br>
<center>
<select id="agency" style="width:200px; height:40px;">
	<option value="agence">Agence</option>
	{% for agency in agencies %}
	<option value="{{ agency.name }}">{{ agency.name }}</option>
	{% endfor %}
</select>

<select id="domain" style="width:200px; height:40px;">
  <option value="activity" align="center">Secteur d'activit√©</option>
	{% for domain in domains %}
	<option value="{{ domain.name }}">{{ domain.name }}</option>
	{% endfor %}
</select>
<button type="button" style="height:40px;" onclick="Filter()">Filtrer</button>
</center>
<!-- Filter -->

<br>
<table id="example" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>Agence</th>
                <th>Active</th>
                <th>Options</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
							<th>Titre</th>
							<th>Date</th>
							<th>Agence</th>
							<th>Active</th>
							<th>Options</th>
            </tr>
        </tfoot>
        <tbody>


					{% for offer in offers %}
					<tr>

					<td><center>{{ offer.title }}</center></td>
					<td><center>{{ offer.begin|date('Y-m-d') }}</center></td>
					<td><center>{{ offer.agency }}</center></td>

					{% if offer.active %}
						<td><center>Active</center></td>
					{% else %}
						<td><center>Offre non disponible</center></td>
					{% endif %}
					<td>
						<center>
						<a href="{{ path('edit_offer') ~ "?id=" ~ offer.id }}"> <img src="{{ asset( 'img/offer/edit.png') }}"  alt="" style="width:20px; height:20px;"/></a>
						&nbsp;&nbsp;&nbsp;
						<a href="{{ path('duplicate_offer') ~ "?id=" ~ offer.id }}"> <img src="{{ asset( 'img/offer/duplicate.png') }}"  alt="" style="width:20px; height:20px;"/></a>
						&nbsp;&nbsp;&nbsp;
						<a href="{{ path('delete_offer') ~ "?id=" ~ offer.id }}"> <img src="{{ asset( 'img/offer/delete.jpg') }}"  alt="" style="width:20px; height:20px;"/></a>
						</center>
					</td>

				</tr>
			{% endfor %}
    	</tbody>
    </table>

	</body>

<script>
function Addoffer()
{
	var path = "{{ path('add_offer') }}";

	window.location.replace(path);
}

function Filter()
{
	var path = "{{ path('offer') }}";

	path += "	?agency=" + document.getElementById('agency').value + "&"+ "domain=" + document.getElementById('domain').value;
	window.location.replace(path);
}

</script>
