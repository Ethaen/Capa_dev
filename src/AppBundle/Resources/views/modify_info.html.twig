                        </div>
                        <div class="clearfix"></div>
                        <div class="line"></div>
                        <h3>Mes informations de connexion</h3>
                        <div class="col-sm-6">
                            <input id="email" type="text" placeholder="Mon Email *" name="email" value=" {{ user_info[0].email }}" />
                        </div>
                        <div class="col-sm-6">
                            <input id="password" type="text" placeholder="Mon mot de passe *" name="pwd" value="**********" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="line"></div>
                        <h3>Mes préférences d'emploi</h3>
                        <div class="col-sm-6">
                            <div id="type">
                            <select id="domain">
                                {% if (user_info[0].domain == "" or user_info[0].domain == "Secteur d'activité") %}
                                  <option selected>Secteur d'activité</option>
                                {% else %}
                                  <option>Secteur d'activité</option>
                                   <option selected>{{ user_info[0].domain }}</option>
                                {% endif %}

                                {% for domain in domains %}
                                  {% if (domain.name != user_info[0].domain or user_info[0].domain == "Secteur d'activité" ) %}
                                    <option>{{ domain.name }}</option>
                                  {% endif %}
                                {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="type">
                                <select id="job">
                                  {% if (user_info[0].job == "" or user_info[0].job == "Métier") %}
                                    <option selected>Métier</option>
                                  {% else %}
                                    <option>Métier</option>
                                     <option selected>{{ user_info[0].job }}</option>
                                  {% endif %}

                                    {% for job in jobs %}
                                      {% if (job.name != user_info[0].job or user_info[0].job == "Métier") %}
                                        <option>{{ job.name }}</option>
                                      {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="type">
                                <select id="agency">
                                    {% if (user_info[0].agency == "" or user_info[0].agency == "Mon Agence CAPA") %}
                                    <option selected>Mon Agence CAPA</option>
                                    {% else %}
                                    <option>Mon Agence CAPA</option>
                                    <option selected>{{ user_info[0].agency }}</option>
                                    {% endif %}
                                    {% for agency in agencies %}
                                    {% if user_info[0].agency != agency.name %}
                                    <option>{{ agency.name }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div id="type">
                                <select id="contract_type">
                                    {% if (user_info[0].employType == "" or user_info[0].employType == "Type de contrat") %}
                                        <option selected>Type de contrat</option>
                                      {% else %}
                                        <option selected>{{ user_info[0].employType }}</option>
                                    {% endif %}
                                    {% if user_info[0].employType != "Intérim" %}
                                      <option>Intérim</option>
                                    {% endif %}
                                    {% if user_info[0].employType != "CDD" %}
                                      <option>CDD</option>
                                    {% endif %}
                                    {% if user_info[0].employType != "CDI" %}
                                      <option>CDI</option>
                                    {% endif %}
