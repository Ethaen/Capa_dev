<div id="offres">
    <div class="container">
        <div id="counter">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 col-md-4 col-sm-6">
                    {% if available_offer / 100 >= 1 %}
                    <span class="chiffre jaune">{{ (available_offer / 100)|round(0, 'floor') }}</span>
                    {% else %}
                    <span class="chiffre jaune">0</span>
                    {% endif %}


                    {% if available_offer / 100 >= 1 %}
                    <span class="chiffre bleu">{{ (available_offer / 10 % 10)|round(0, 'floor') }}</span>
                    {% elseif available_offer / 10 >= 1 %}
                    <span class="chiffre bleu">{{ (available_offer / 10)|round(0, 'floor') }}</span>
                    {% else %}
                      <span class="chiffre bleu">0</span>
                    {% endif %}

                    {% if available_offer / 100 >= 1 %}
                    <span class="chiffre jaune">{{ (available_offer % 100 % 10)|round(0, 'floor')}}</span>
                    {% elseif available_offer / 10 >= 1 %}
                    <span class="chiffre jaune">{{ (available_offer % 10)|round(0, 'floor')}}</span>
                    {% else %}
                    <span class="chiffre bleu">{{ available_offer }}</span>
                    {% endif %}
                </div>
                <div class="col-lg-3 col-md-4 col-sm-5" id="arrow">
                    Offres<br /> à pourvoir
                </div>
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <a class="btn btn-default" href="{{ path('list_offers') }}">Voir les offres</a>
                </div>
            </div>
        </div>
        <div id="last">
