<div id="page-title">
    <div class="container">
    <h1>{{ actuality.title }}</h1>
    </div>
</div>

    <div id="breadcrumb">
    <div class="container">
    <ul>
        <li><a class="home" href="./">Accueil</a></li>
        <li><a href="{{ path('list_actuality') }}">Actualités</a></li>
        <li>{{ actuality.title }}</li>
    </ul>
    </div>
</div>

<div id="article">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                    <img src="{{ actuality.img_name }}" class="img-responsive" />
                            <p class="date">{{ actuality.date|date('d/m/Y') }}</p>
                            {{ actuality.texte|raw }}
            </div>
            <div class="col-sm-3 col-sm-offset-1">
                <div class="box">
                    <h3>Les derniers articles</h3>
                    <ul>
                      {% for actuality1 in last_actualities %}
                        <li><a href="{{ path('actuality_details', {'id': actuality1.id}) }}">{{ actuality1.title }}</a></li>
                      {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<footer>
<div id="agences-list">
    <div class="container">
        <h2>Nos agences</h2>
        <div class="row">
          {% for agency in agencies %}
            <div class="col-md-3 col-sm-6">
                <div class="agence">
                    <h3>{{ agency.name }}</h3>
                    <a class="tel" href="tel:{{ agency.phone }}">02 40 87 86 86</a>
                    <a class="adresse" href="https://goo.gl/maps/b1GQYLi9AYv"   target="_blank">{{ agency.address }}<br /> {{ agency.city }} </a>
                </div>
            </div>
          {% endfor %}
